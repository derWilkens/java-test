<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="local.paxbase.entity.Transfer"
          extends="_local"
          name="transfer-browser-view"/>
    <view class="local.paxbase.entity.Transfer"
          extends="_local"
          name="transfer-edit-view">
        <property name="waypointList"
                  view="_minimal">
            <property name="site">
                <property name="client"/>
                <property name="name"/>
            </property>
            <property name="client"/>
        </property>
        <property name="crewChange"
                  view="_minimal">
            <property name="flightDate"/>
            <property name="client"/>
        </property>
    </view>
    <view class="local.paxbase.entity.Site"
          extends="_local"
          name="site-browser-view">
        <property name="parentSite"
                  view="_minimal"/>
    </view>
    <view class="local.paxbase.entity.DutyPeriod"
          extends="_local"
          name="dutyPeriod-edit-view">
        <property name="user"
                  view="_minimal">
            <property name="osFirstname"/>
            <property name="osLastname"/>
        </property>
        <property name="site"
                  view="_minimal"/>
        <property name="outboundTransfer"
                  view="_minimal"/>
        <property name="inboundTransfer"
                  view="_minimal"/>
    </view>
    <view class="local.paxbase.entity.OffshoreUser"
          name="offshoreUser-browser-view">
        <property name="user">
            <property name="name"/>
            <property name="login"/>
        </property>
    </view>
    <view class="local.paxbase.entity.OffshoreUser"
          name="offshoreUser-edit-view">
        <property name="user">
            <property name="name"/>
            <property name="firstName"/>
            <property name="lastName"/>
            <property name="position"/>
            <property name="email"/>
        </property>
        <property name="company"
                  view="_minimal">
            <property name="companyName"/>
        </property>
    </view>
    <view class="local.paxbase.entity.Waypoint"
          extends="_local"
          name="waypoint-browser-view">
        <property name="site"
                  view="_minimal"/>
    </view>
</views>
