<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="local.paxbase.web.dutyperiod.DutyPeriodEdit"
        datasource="dutyPeriodDs"
        focusComponent="fieldGroup"
        messagesPack="local.paxbase.web.dutyperiod">
    <dsContext>
        <datasource id="dutyPeriodDs"
                    class="local.paxbase.entity.DutyPeriod"
                    view="dutyPeriod-edit-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="dutyPeriodDs">
            <column width="250px">
                <field id="client"/>
                <field id="user"/>
                <field id="site"/>
                <field id="outboundTransfer"/>
                <field id="inboundTransfer"/>
                <field id="contractor"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
