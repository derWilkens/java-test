<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="local.paxbase.web.dutyperiod.DutyPeriodBrowse"
        focusComponent="dutyPeriodsTable"
        lookupComponent="dutyPeriodsTable"
        messagesPack="local.paxbase.web.dutyperiod">
    <dsContext>
        <collectionDatasource id="dutyPeriodsDs"
                              class="local.paxbase.entity.DutyPeriod"
                              view="_local">
            <query>
                <![CDATA[select e from paxbase$DutyPeriod e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="dutyPeriodsTable"
            spacing="true">
        <filter id="filter"
                applyTo="dutyPeriodsTable"
                datasource="dutyPeriodsDs">
            <properties include=".*"/>
        </filter>
        <table id="dutyPeriodsTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="client"/>
            </columns>
            <rows datasource="dutyPeriodsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="dutyPeriodsTable.create"/>
                <button id="editBtn"
                        action="dutyPeriodsTable.edit"/>
                <button id="removeBtn"
                        action="dutyPeriodsTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
