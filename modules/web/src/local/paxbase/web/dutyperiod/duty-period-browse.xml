<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="local.paxbase.web.dutyperiod.DutyPeriodBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="local.paxbase.web.dutyperiod">
    <dsContext>
        <datasource id="dutyPeriodDs"
                    class="local.paxbase.entity.DutyPeriod"
                    view="dutyPeriod-view"/>
        <groupDatasource id="dutyPeriodsDs"
                         class="local.paxbase.entity.DutyPeriod"
                         view="dutyPeriod-view">
            <query>
                <![CDATA[select e from paxbase$DutyPeriod e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="sitesDs"
                              class="local.paxbase.entity.coredata.Site"
                              view="_minimal">
            <query>
                <![CDATA[select e from paxbase$Site e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="functionCategoriesDs"
                              class="local.paxbase.entity.coredata.FunctionCategory"
                              view="_minimal">
            <query>
                <![CDATA[select e from paxbase$FunctionCategory e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="dutyPeriodsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="client"/>
                        <column id="start"/>
                        <column id="end"/>
                        <column id="functionCategory"/>
                        <column id="remark"/>
                        <column id="personOnDuty"/>
                        <column id="site"/>
                    </columns>
                    <rows datasource="dutyPeriodsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="dutyPeriodDs">
                        <column width="250px">
                            <field property="client"/>
                            <field property="start"/>
                            <field property="end"/>
                            <field optionsDatasource="functionCategoriesDs"
                                   property="functionCategory"/>
                            <field property="remark"/>
                            <field property="personOnDuty"/>
                            <field optionsDatasource="sitesDs"
                                   property="site"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
