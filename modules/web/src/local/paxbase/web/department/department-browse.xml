<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="local.paxbase.web.department.DepartmentBrowse"
        focusComponent="departmentsTable"
        lookupComponent="departmentsTable"
        messagesPack="local.paxbase.web.department">
    <dsContext>
        <datasource id="departmentDs"
                    class="local.paxbase.entity.coredata.Department"
                    view="department-treeview"/>
        <groupDatasource id="departmentsDs"
                         class="local.paxbase.entity.coredata.Department"
                         view="department-treeview">
            <query>
                <![CDATA[select e from paxbase$Department e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="parentDepartmentsDs"
                              class="local.paxbase.entity.coredata.Department"
                              view="_minimal">
            <query>
                <![CDATA[select e from paxbase$Department e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="departmentsTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="departmentsTable"
                        datasource="departmentsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="departmentsTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="client"/>
                        <column id="name"/>
                        <column id="parentDepartment"/>
                        <column id="leader"/>
                        <column id="deputyLeader"/>
                        <column id="acronym"/>
                    </columns>
                    <rows datasource="departmentsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="departmentsTable.create"/>
                        <button id="editBtn"
                                action="departmentsTable.edit"/>
                        <button id="removeBtn"
                                action="departmentsTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="departmentDs">
                        <column width="250px">
                            <field property="name"/>
                            <field optionsDatasource="parentDepartmentsDs"
                                   property="parentDepartment"/>
                            <field property="leader"/>
                            <field property="deputyLeader"/>
                            <field property="acronym"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
