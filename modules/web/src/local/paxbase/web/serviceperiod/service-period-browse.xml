<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="local.paxbase.web.serviceperiod.ServicePeriodBrowse"
        focusComponent="servicePeriodsTable"
        lookupComponent="servicePeriodsTable"
        messagesPack="local.paxbase.web.serviceperiod">
    <dsContext>
        <datasource id="servicePeriodDs"
                    class="local.paxbase.entity.ServicePeriod"
                    view="servicePeriodList-view"/>
        <groupDatasource id="servicePeriodsDs"
                         class="local.paxbase.entity.ServicePeriod"
                         view="servicePeriod-view">
            <query>
                <![CDATA[select e from paxbase$ServicePeriod e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="servicePeriodsTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="servicePeriodsTable"
                        datasource="servicePeriodsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="servicePeriodsTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="start"/>
                        <column id="end"/>
                        <column id="type"/>
                        <column id="offshoreUser"/>
                    </columns>
                    <rows datasource="servicePeriodsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="servicePeriodsTable.create"/>
                        <button id="editBtn"
                                action="servicePeriodsTable.edit"/>
                        <button id="removeBtn"
                                action="servicePeriodsTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="servicePeriodDs">
                        <column width="250px">
                            <field id="start"/>
                            <field id="end"/>
                            <field id="type"/>
                            <field id="offshoreUser"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
