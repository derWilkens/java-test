<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="local.paxbase.web.transfer.TransferEdit"
        datasource="transferDs"
        focusComponent="fieldGroup"
        messagesPack="local.paxbase.web.transfer">
    <dsContext>
        <datasource id="transferDs"
                    class="local.paxbase.entity.Transfer"
                    view="transfer-edit-view">
            <collectionDatasource id="waypointDs"
                                  property="waypointList"/>
        </datasource>
        <datasource id="siteDs"
                    class="local.paxbase.entity.Site"
                    view="_minimal"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tblWaypoints"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="transferDs">
            <column width="250px">
                <field id="client"/>
                <field id="transferOrderNo"/>
                <field id="crewChange"/>
                <field id="modeOfTransport"/>
            </column>
        </fieldGroup>
        <table id="tblWaypoints"
               width="400px">
            <actions>
                <action id="add"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="client"/>
                <column id="site.name"/>
                <column id="takeOff"/>
                <column id="transferDuration"/>
            </columns>
            <rows datasource="waypointDs"/>
            <buttonsPanel>
                <button action="tblWaypoints.add"/>
                <button action="tblWaypoints.remove"/>
            </buttonsPanel>
        </table>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
