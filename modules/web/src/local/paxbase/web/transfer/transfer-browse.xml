<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="local.paxbase.web.transfer.TransferBrowse"
        focusComponent="transfersTable"
        lookupComponent="transfersTable"
        messagesPack="local.paxbase.web.transfer">
    <dsContext>
        <collectionDatasource id="transfersDs"
                              class="local.paxbase.entity.Transfer"
                              view="_local">
            <query>
                <![CDATA[select e from paxbase$Transfer e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="transfersTable"
            spacing="true">
        <filter id="filter"
                applyTo="transfersTable"
                datasource="transfersDs">
            <properties include=".*"/>
        </filter>
        <table id="transfersTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="client"/>
                <column id="transferOrderNo"/>
                <column id="modeOfTransfer"/>
            </columns>
            <rows datasource="transfersDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="transfersTable.create"/>
                <button id="editBtn"
                        action="transfersTable.edit"/>
                <button id="removeBtn"
                        action="transfersTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
