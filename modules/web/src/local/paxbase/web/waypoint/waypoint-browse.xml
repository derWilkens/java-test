<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="local.paxbase.web.waypoint.WaypointBrowse"
        focusComponent="waypointsTable"
        lookupComponent="waypointsTable"
        messagesPack="local.paxbase.web.waypoint">
    <dsContext>
        <collectionDatasource id="waypointsDs"
                              class="local.paxbase.entity.Waypoint"
                              view="waypoint-browser-view">
            <query>
                <![CDATA[select e from paxbase$Waypoint e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="waypointsTable"
            spacing="true">
        <filter id="filter"
                applyTo="waypointsTable"
                datasource="waypointsDs">
            <properties include=".*"/>
        </filter>
        <table id="waypointsTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="client"/>
                <column id="takeOff"/>
                <column id="transferDuration"/>
                <column id="site"/>
                <column id="orderNo"/>
            </columns>
            <rows datasource="waypointsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="waypointsTable.create"/>
                <button id="editBtn"
                        action="waypointsTable.edit"/>
                <button id="removeBtn"
                        action="waypointsTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
