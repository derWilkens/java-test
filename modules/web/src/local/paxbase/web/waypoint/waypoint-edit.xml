<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="local.paxbase.web.waypoint.WaypointEdit"
        datasource="waypointDs"
        focusComponent="fieldGroup"
        messagesPack="local.paxbase.web.waypoint">
    <dsContext>
        <datasource id="waypointDs"
                    class="local.paxbase.entity.Waypoint"
                    view="waypoint-browser-view"/>
        <collectionDatasource id="sitesDs"
                              class="local.paxbase.entity.Site"
                              view="site-browser-view">
            <query>
                <![CDATA[select e from paxbase$Site e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="waypointDs">
            <column width="250px">
                <field id="takeOff"/>
                <field id="transferDuration"/>
                <field id="site"
                       optionsDatasource="sitesDs"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
