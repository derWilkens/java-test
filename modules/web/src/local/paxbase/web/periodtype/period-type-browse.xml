<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="local.paxbase.web.periodtype.PeriodTypeBrowse"
        focusComponent="periodTypesTable"
        lookupComponent="periodTypesTable"
        messagesPack="local.paxbase.web.periodtype">
    <dsContext>
        <datasource id="periodTypeDs"
                    class="local.paxbase.entity.coredata.PeriodType"
                    view="_local"/>
        <groupDatasource id="periodTypesDs"
                         class="local.paxbase.entity.coredata.PeriodType"
                         view="_local">
            <query>
                <![CDATA[select e from paxbase$PeriodType e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="periodTypesTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="periodTypesTable"
                        datasource="periodTypesDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="periodTypesTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="typeName"/>
                        <column id="typeGroup"/>
                    </columns>
                    <rows datasource="periodTypesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="periodTypesTable.create"/>
                        <button id="editBtn"
                                action="periodTypesTable.edit"/>
                        <button id="removeBtn"
                                action="periodTypesTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="periodTypeDs">
                        <column width="250px">
                            <field id="typeName"/>
                            <field id="typeGroup"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
