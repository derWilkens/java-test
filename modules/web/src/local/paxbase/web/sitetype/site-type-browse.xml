<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="local.paxbase.web.sitetype.SiteTypeBrowse"
        focusComponent="siteTypesTable"
        lookupComponent="siteTypesTable"
        messagesPack="local.paxbase.web.sitetype">
    <dsContext>
        <datasource id="siteTypeDs"
                    class="local.paxbase.entity.coredata.SiteType"
                    view="siteType-view"/>
        <hierarchicalDatasource id="siteTypesDs"
                                class="local.paxbase.entity.coredata.SiteType"
                                hierarchyProperty="parentType"
                                view="siteType-view">
            <query>
                <![CDATA[select e from paxbase$SiteType e]]>
            </query>
        </hierarchicalDatasource>
        <collectionDatasource id="parentTypesDs"
                              class="local.paxbase.entity.coredata.SiteType"
                              view="_minimal">
            <query>
                <![CDATA[select e from paxbase$SiteType e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="siteTypesTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="siteTypesTable"
                        datasource="siteTypesDs">
                    <properties include=".*"/>
                </filter>
                <treeTable id="siteTypesTable"
                           width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="type"/>
                        <column id="parentType.type"/>
                    </columns>
                    <rows datasource="siteTypesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="siteTypesTable.create"/>
                        <button id="editBtn"
                                action="siteTypesTable.edit"/>
                        <button id="removeBtn"
                                action="siteTypesTable.remove"/>
                    </buttonsPanel>
                </treeTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="siteTypeDs">
                        <column width="250px">
                            <field id="type"/>
                            <field id="parentType"
                                   optionsDatasource="parentTypesDs"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
