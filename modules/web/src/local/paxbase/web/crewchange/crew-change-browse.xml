<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="local.paxbase.web.crewchange.CrewChangeBrowse"
        focusComponent="crewChangesTable"
        lookupComponent="crewChangesTable"
        messagesPack="local.paxbase.web.crewchange">
    <dsContext>
        <collectionDatasource id="crewChangesDs"
                              class="local.paxbase.entity.CrewChange"
                              view="_local">
            <query>
                <![CDATA[select e from paxbase$CrewChange e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="crewChangesTable"
            spacing="true">
        <filter id="filter"
                applyTo="crewChangesTable"
                datasource="crewChangesDs">
            <properties include=".*"/>
        </filter>
        <table id="crewChangesTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="client"/>
                <column id="flightDate"/>
            </columns>
            <rows datasource="crewChangesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="crewChangesTable.create"/>
                <button id="editBtn"
                        action="crewChangesTable.edit"/>
                <button id="removeBtn"
                        action="crewChangesTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
