<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="local.paxbase.web.campaign.CampaignBrowse"
        focusComponent="campaignsTable"
        lookupComponent="campaignsTable"
        messagesPack="local.paxbase.web.campaign">
    <dsContext>
        <datasource id="campaignDs"
                    class="local.paxbase.entity.Campaign"
                    view="campaign-view"/>
        <groupDatasource id="campaignsDs"
                         class="local.paxbase.entity.Campaign"
                         view="campaign-view">
            <query>
                <![CDATA[select e from paxbase$Campaign e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="sitesDs"
                              class="local.paxbase.entity.coredata.Site"
                              view="_minimal">
            <query>
                <![CDATA[select e from paxbase$Site e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="campaignsTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="campaignsTable"
                        datasource="campaignsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="campaignsTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="start"/>
                        <column id="end"/>
                        <column id="type"/>
                        <column id="campaignNumber"/>
                        <column id="shutdown"/>
                        <column id="site"/>
                    </columns>
                    <rows datasource="campaignsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="campaignsTable.create"/>
                        <button id="editBtn"
                                action="campaignsTable.edit"/>
                        <button id="removeBtn"
                                action="campaignsTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="campaignDs">
                        <column width="250px">
                            <field id="start"/>
                            <field id="end"/>
                            <field id="type"/>
                            <field id="campaignNumber"/>
                            <field id="shutdown"/>
                            <field id="site"
                                   optionsDatasource="sitesDs"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
