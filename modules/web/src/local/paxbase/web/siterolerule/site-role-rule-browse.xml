<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="local.paxbase.web.siterolerule.SiteRoleRuleBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="local.paxbase.web.siterolerule">
    <dsContext>
        <datasource id="siteRoleRuleDs"
                    class="local.paxbase.entity.coredata.SiteRoleRule"
                    view="siteRoleRules-view">
            <collectionDatasource id="rangeRuleDs"
                                  property="rangeRule"/>
        </datasource>
        <groupDatasource id="siteRoleRulesDs"
                         class="local.paxbase.entity.coredata.SiteRoleRule"
                         view="siteRoleRules-view">
            <query>
                <![CDATA[select e from paxbase$SiteRoleRule e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="sitesDs"
                              class="local.paxbase.entity.coredata.Site"
                              view="_minimal">
            <query>
                <![CDATA[select e from paxbase$Site e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="siteRoleRulesDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="site"/>
                        <column id="role"/>
                    </columns>
                    <rows datasource="siteRoleRulesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="tabSheetBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="tabSheetBox">
                    <tabSheet id="tabSheet"
                              height="100%">
                        <tab id="mainTab"
                             caption="msg://mainTab"
                             margin="true">
                            <fieldGroup id="fieldGroup"
                                        datasource="siteRoleRuleDs">
                                <column width="250px">
                                    <field optionsDatasource="sitesDs"
                                           property="site"/>
                                    <field property="role"/>
                                </column>
                            </fieldGroup>
                        </tab>
                        <tab id="rangeRuleTab"
                             caption="msg://local.paxbase.entity.coredata/SiteRoleRule.rangeRule"
                             margin="true,false,false,false">
                            <table id="rangeRuleTable"
                                   height="200px"
                                   width="100%">
                                <actions>
                                    <action id="create"/>
                                    <action id="edit"/>
                                    <action id="remove"/>
                                </actions>
                                <columns>
                                    <column id="amountFrom"/>
                                    <column id="amountTo"/>
                                    <column id="requiredNumber"/>
                                </columns>
                                <rows datasource="rangeRuleDs"/>
                                <buttonsPanel>
                                    <button action="rangeRuleTable.create"/>
                                    <button action="rangeRuleTable.edit"/>
                                    <button action="rangeRuleTable.remove"/>
                                </buttonsPanel>
                            </table>
                        </tab>
                    </tabSheet>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
