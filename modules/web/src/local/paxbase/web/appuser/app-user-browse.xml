<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="local.paxbase.web.appuser.AppUserBrowse"
        focusComponent="appUsersTable"
        lookupComponent="appUsersTable"
        messagesPack="local.paxbase.web.appuser">
    <dsContext>
        <datasource id="appUserDs"
                    class="local.paxbase.entity.coredata.AppUser"
                    view="appUser-view"/>
        <groupDatasource id="appUsersDs"
                         class="local.paxbase.entity.coredata.AppUser"
                         view="appUser-view">
            <query>
                <![CDATA[select e from paxbase$AppUser e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="appUsersTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="appUsersTable"
                        datasource="appUsersDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="appUsersTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="firstName"/>
                        <column id="lastName"/>
                        <column id="email"/>
                    </columns>
                    <rows datasource="appUsersDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="appUsersTable.create"/>
                        <button id="editBtn"
                                action="appUsersTable.edit"/>
                        <button id="removeBtn"
                                action="appUsersTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="appUserDs">
                        <column width="250px">
                            <field property="firstName"/>
                            <field property="lastName"/>
                            <field property="email"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
