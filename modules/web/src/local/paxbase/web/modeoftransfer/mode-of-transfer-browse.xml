<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="local.paxbase.web.modeoftransfer.ModeOfTransferBrowse"
        focusComponent="modeOfTransfersTable"
        lookupComponent="modeOfTransfersTable"
        messagesPack="local.paxbase.web.modeoftransfer">
    <dsContext>
        <datasource id="modeOfTransferDs"
                    class="local.paxbase.entity.coredata.ModeOfTransfer"
                    view="_local"/>
        <groupDatasource id="modeOfTransfersDs"
                         class="local.paxbase.entity.coredata.ModeOfTransfer"
                         view="_local">
            <query>
                <![CDATA[select e from paxbase$ModeOfTransfer e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="modeOfTransfersTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="modeOfTransfersTable"
                        datasource="modeOfTransfersDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="modeOfTransfersTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="client"/>
                        <column id="mode"/>
                    </columns>
                    <rows datasource="modeOfTransfersDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="modeOfTransfersTable.create"/>
                        <button id="editBtn"
                                action="modeOfTransfersTable.edit"/>
                        <button id="removeBtn"
                                action="modeOfTransfersTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="modeOfTransferDs">
                        <column width="250px">
                            <field property="client"/>
                            <field property="mode"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
