<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="local.paxbase.web.oe.OEBrowse"
        focusComponent="oEsTable"
        lookupComponent="oEsTable"
        messagesPack="local.paxbase.web.oe">
    <dsContext>
        <hierarchicalDatasource id="oEsDs"
                                class="local.paxbase.entity.coredata.OE"
                                hierarchyProperty="parentOE"
                                view="oe-treeview">
            <query>
                <![CDATA[select e from paxbase$OE e left join paxbase$OffshoreUser u on u.oe = e]]>
            </query>
        </hierarchicalDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="oEsTable"
            spacing="true">
        <filter id="filter"
                applyTo="oEsTable"
                datasource="oEsDs">
            <properties include=".*"/>
        </filter>
        <treeTable id="oEsTable"
                   width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="client"/>
                <column id="name"/>
                <column id="parentOE"/>
            </columns>
            <rows datasource="oEsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="oEsTable.create"/>
                <button id="editBtn"
                        action="oEsTable.edit"/>
                <button id="removeBtn"
                        action="oEsTable.remove"/>
            </buttonsPanel>
        </treeTable>
    </layout>
</window>
