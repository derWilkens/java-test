<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="local.paxbase.web.numberrangerule.NumberRangeRuleEdit"
        datasource="numberRangeRuleDs"
        focusComponent="fieldGroup"
        messagesPack="local.paxbase.web.numberrangerule">
    <dsContext>
        <datasource id="numberRangeRuleDs"
                    class="local.paxbase.entity.coredata.NumberRangeRule"
                    view="numberRangeRule-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="numberRangeRuleDs">
            <column width="250px">
                <field property="amountFrom"/>
                <field property="amountTo"/>
                <field property="requiredNumber"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
