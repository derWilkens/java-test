<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="local.paxbase.web.functioncategory.FunctionCategoryBrowse"
        focusComponent="functionCategoriesTable"
        lookupComponent="functionCategoriesTable"
        messagesPack="local.paxbase.web.functioncategory">
    <dsContext>
        <datasource id="functionCategoryDs"
                    class="local.paxbase.entity.coredata.FunctionCategory"
                    view="functionCategory-view"/>
        <hierarchicalDatasource id="functionCategoriesDs"
                                class="local.paxbase.entity.coredata.FunctionCategory"
                                hierarchyProperty="parentType"
                                view="functionCategory-treeView">
            <query>
                <![CDATA[select e from paxbase$FunctionCategory e]]>
            </query>
        </hierarchicalDatasource>
        <collectionDatasource id="parentTypesDs"
                              class="local.paxbase.entity.coredata.FunctionCategory"
                              view="_minimal">
            <query>
                <![CDATA[select e from paxbase$FunctionCategory e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="functionCategoriesTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="functionCategoriesTable"
                        datasource="functionCategoriesDs">
                    <properties include=".*"/>
                </filter>
                <treeTable id="functionCategoriesTable"
                           width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="categoryName"/>
                        <column id="periodSubClass"/>
                    </columns>
                    <rows datasource="functionCategoriesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="functionCategoriesTable.create"/>
                        <button id="editBtn"
                                action="functionCategoriesTable.edit"/>
                        <button id="removeBtn"
                                action="functionCategoriesTable.remove"/>
                    </buttonsPanel>
                </treeTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="functionCategoryDs">
                        <column width="250px">
                            <field id="categoryName"/>
                            <field id="parentType"
                                   optionsDatasource="parentTypesDs"/>
                            <field id="periodSubClass"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
