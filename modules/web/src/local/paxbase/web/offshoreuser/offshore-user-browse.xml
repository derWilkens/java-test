<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="local.paxbase.web.offshoreuser.OffshoreUserBrowse"
        focusComponent="offshoreUsersTable"
        lookupComponent="offshoreUsersTable"
        messagesPack="local.paxbase.web.offshoreuser">
    <dsContext>
        <datasource id="offshoreUserDs"
                    class="local.paxbase.entity.OffshoreUser"
                    view="offshoreUser-browser-view"/>
        <groupDatasource id="offshoreUsersDs"
                         class="local.paxbase.entity.OffshoreUser"
                         view="offshoreUser-browser-view">
            <query>
                <![CDATA[select e from paxbase$OffshoreUser e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="companiesDs"
                              class="local.paxbase.entity.coredata.Company"
                              view="_minimal">
            <query>
                <![CDATA[select e from paxbase$Company e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="departmentsDs"
                              class="local.paxbase.entity.coredata.Department"
                              view="_minimal">
            <query>
                <![CDATA[select e from paxbase$Department e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="offshoreUsersTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="offshoreUsersTable"
                        datasource="offshoreUsersDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="offshoreUsersTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="firstName"/>
                        <column id="lastName"/>
                        <column id="position"/>
                        <column id="company"/>
                        <column id="department"/>
                    </columns>
                    <rows datasource="offshoreUsersDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="offshoreUsersTable.create"/>
                        <button id="editBtn"
                                action="offshoreUsersTable.edit"/>
                        <button id="removeBtn"
                                action="offshoreUsersTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="offshoreUserDs">
                        <column width="250px">
                            <field property="firstName"/>
                            <field property="lastName"/>
                            <field property="position"/>
                            <field optionsDatasource="companiesDs"
                                   property="company"/>
                            <field optionsDatasource="departmentsDs"
                                   property="department"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
