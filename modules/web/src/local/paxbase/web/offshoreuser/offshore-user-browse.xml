<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="local.paxbase.web.offshoreuser.OffshoreUserBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="local.paxbase.web.offshoreuser">
    <dsContext>
        <datasource id="offshoreUserDs"
                    class="local.paxbase.entity.OffshoreUser"
                    view="offshoreUser-browser-view">
            <collectionDatasource id="jobfunctionDs"
                                  property="jobfunction"/>
        </datasource>
        <groupDatasource id="offshoreUsersDs"
                         class="local.paxbase.entity.OffshoreUser"
                         view="offshoreUser-browser-view">
            <query>
                <![CDATA[select e from paxbase$OffshoreUser e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="companiesDs"
                              class="local.paxbase.entity.coredata.Company"
                              view="_minimal">
            <query>
                <![CDATA[select e from paxbase$Company e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="departmentsDs"
                              class="local.paxbase.entity.coredata.Department"
                              view="_minimal">
            <query>
                <![CDATA[select e from paxbase$Department e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="offshoreUsersDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="firstName"/>
                        <column id="lastName"/>
                        <column id="position"/>
                        <column id="email"/>
                        <column id="company"/>
                        <column id="department"/>
                    </columns>
                    <rows datasource="offshoreUsersDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="tabSheetBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="tabSheetBox">
                    <tabSheet id="tabSheet"
                              height="100%">
                        <tab id="mainTab"
                             caption="msg://mainTab"
                             margin="true">
                            <fieldGroup id="fieldGroup"
                                        datasource="offshoreUserDs">
                                <column width="250px">
                                    <field property="firstName"/>
                                    <field property="lastName"/>
                                    <field property="position"/>
                                    <field property="email"/>
                                    <field optionsDatasource="companiesDs"
                                           property="company"/>
                                    <field optionsDatasource="departmentsDs"
                                           property="department"/>
                                </column>
                            </fieldGroup>
                        </tab>
                        <tab id="jobfunctionTab"
                             caption="msg://local.paxbase.entity/OffshoreUser.jobfunction"
                             margin="true,false,false,false">
                            <table id="jobfunctionTable"
                                   height="200px"
                                   width="100%">
                                <actions>
                                    <action id="add"/>
                                    <action id="remove"/>
                                </actions>
                                <columns>
                                    <column id="name"/>
                                    <column id="role"/>
                                </columns>
                                <rows datasource="jobfunctionDs"/>
                                <buttonsPanel>
                                    <button action="jobfunctionTable.add"/>
                                    <button action="jobfunctionTable.remove"/>
                                </buttonsPanel>
                            </table>
                        </tab>
                    </tabSheet>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
