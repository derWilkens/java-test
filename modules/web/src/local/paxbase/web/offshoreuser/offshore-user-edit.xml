<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="local.paxbase.web.offshoreuser.OffshoreUserEdit"
        datasource="offshoreUserDs"
        focusComponent="fieldGroup"
        messagesPack="local.paxbase.web.offshoreuser">
    <dsContext>
        <datasource id="offshoreUserDs"
                    class="local.paxbase.entity.OffshoreUser"
                    view="offshoreUser-edit-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox"
            spacing="true">
        <scrollBox id="scrollBox"
                   spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="offshoreUserDs">
                <column width="250px">
                    <field id="firstName"/>
                    <field id="lastName"/>
                    <field id="email"/>
                    <field id="position"/>
                    <field id="language"/>
                    <field id="active"/>
                    <field id="changePasswordAtNextLogon"/>
                    <field id="group"/>
                    <field id="client"/>
                    <field id="company"/>
                </column>
            </fieldGroup>
        </scrollBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
