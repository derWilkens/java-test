<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="local.paxbase.web.offshoreuser.OffshoreUserEdit"
        datasource="offshoreUserDs"
        focusComponent="fieldGroup"
        messagesPack="local.paxbase.web.offshoreuser">
    <dsContext>
        <datasource id="offshoreUserDs"
                    class="local.paxbase.entity.OffshoreUser"
                    view="offshoreUser-edit-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="offshoreUserDs">
            <column width="250px">
                <field id="user"/>
                <field id="company"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
