<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="local.paxbase.web.offshoreuser.Rotaplan"
        focusComponent="offshoreUsersTable"
        lookupComponent="offshoreUsersTable"
        messagesPack="local.paxbase.web.offshoreuser">
    <dsContext>
        <groupDatasource id="offshoreUsersDs"
                         class="local.paxbase.entity.OffshoreUser"
                         view="_minimal">
            <query>
                <![CDATA[select e from paxbase$OffshoreUser e]]>
            </query>
        </groupDatasource>
        <datasource id="dutyPeriodDs"
                    class="local.paxbase.entity.DutyPeriod"
                    view="dutyPeriod-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="offshoreUsersTable"
            spacing="true">
        <vbox id="timelineBox"
              spacing="true"/>
        <filter id="filter"
                applyTo="offshoreUsersTable"
                datasource="offshoreUsersDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="offshoreUsersTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="lastName"/>
            </columns>
            <rows datasource="offshoreUsersDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="offshoreUsersTable.create"/>
                <button id="editBtn"
                        action="offshoreUsersTable.edit"/>
                <button id="removeBtn"
                        action="offshoreUsersTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
