<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="local.paxbase.web.offshoreuser.Rotaplan"
        focusComponent="offshoreUsersTable"
        lookupComponent="offshoreUsersTable"
        messagesPack="local.paxbase.web.offshoreuser">
    <dsContext>
        <groupDatasource id="offshoreUsersDs"
                         class="local.paxbase.entity.OffshoreUser"
                         view="_minimal">
            <query>
                <![CDATA[select e from paxbase$OffshoreUser e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="dutyPeriodsDs"
                              class="local.paxbase.entity.DutyPeriod"
                              view="dutyPeriod-view">
            <query>
                <![CDATA[select e from paxbase$DutyPeriod e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="departmentsDs"
                              class="local.paxbase.entity.coredata.Department"
                              view="department-view">
            <query>
                <![CDATA[select e from paxbase$Department e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="timelineBox"
            spacing="true">
        <scrollBox id="timelineBox"
                   scrollBars="both"
                   spacing="true"/>
        <filter id="filter"
                applyTo="offshoreUsersTable"
                datasource="offshoreUsersDs">
            <properties include=".*"/>
        </filter>
        <hbox spacing="true"
              width="100%">
            <groupTable id="offshoreUsersTable"
                        height="100%"
                        width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="firstName"/>
                    <column id="lastName"/>
                </columns>
                <rows datasource="offshoreUsersDs"/>
                <rowsCount/>
                <buttonsPanel id="buttonsPanel"
                              alwaysVisible="true">
                    <button id="createBtn"
                            action="offshoreUsersTable.create"/>
                    <button id="editBtn"
                            action="offshoreUsersTable.edit"/>
                    <button id="removeBtn"
                            action="offshoreUsersTable.remove"/>
                </buttonsPanel>
            </groupTable>
            <dataGrid id="departments"
                      caption="msg://department"
                      datasource="departmentsDs"
                      height="100px"
                      width="100%">
                <columns>
                    <column property="name"/>
                    <column property="acronym"/>
                </columns>
            </dataGrid>
        </hbox>
    </layout>
</window>
